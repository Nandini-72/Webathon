<%- include("../partials/header"); -%>
<!-- Section for cards -->
<% for(let i=0; i<articles.length; i++){ %>
  <div class="blog-card">
    <div class="meta">
      <div
        class="photo"
        style="
          background-image: url(<%=articles[i].imgUrl%>);
        "
      ></div>
      <ul class="details">
        <li class="author"><a href="#">Nandini Jain</a></li>
        <li class="date"><%=articles[i].createdAt.toLocaleDateString()%></li>
      </ul>
    </div>
    <div class="description">
      <h1><%= articles[i].description %></h1>
      <h2><%= articles[i].createdAt.toLocaleDateString() %></h2>
      <p><%=articles[i].markdown.substring(0,80)+"..." %></p>
      <p class="read-more">
        <a href="articles/<%=articles[i].id%>">Read More</a>
      </p>
    </div>
  </div>
  <%} %> 
  <%- include("../partials/footer"); -%>